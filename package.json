{
  "name": "rebenchdb",
  "version": "0.2.1",
  "description": "A Web-Based Database for ReBench Results",
  "main": "index.js",
  "author": {
    "name": "Stefan Marr",
    "email": "git@stefan-marr.de"
  },
  "license": "MIT",
  "dependencies": {
    "koa": "2.13.1",
    "koa-body": "4.2.0",
    "koa-router": "10.0.0",
    "mustache": "4.2.0",
    "@octokit/rest": "18.5.2",
    "@octokit/auth-app": "3.3.0",
    "pg": "8.6.0",
    "promisify-child-process": "4.1.1"
  },
  "devDependencies": {
    "@octokit/types": "6.13.0",
    "@types/jest": "26.0.22",
    "@types/koa": "2.13.1",
    "@types/koa-router": "7.4.2",
    "@types/mustache": "4.1.1",
    "@types/pg": "7.14.11",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "ajv": "8.1.0",
    "eslint": "7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-jest": "24.3.5",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "26.6.3",
    "nodemon": "2.0.7",
    "prettier": "^2.2.1",
    "source-map-support": "0.5.19",
    "ts-jest": "26.5.5",
    "typescript": "4.2.4",
    "typescript-json-schema": "0.50.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  },
  "scripts": {
    "postinstall": "npm run compile",
    "start": "node ./dist/src/index.js",
    "nodemon": "DEV=true nodemon ./dist/src/index.js --watch ./dist/src --watch ./dist/package.json",
    "compile": "tsc && npm run prep-resources && npm run prep-knitr-reports",
    "prep-resources": "(cd tests; bzip2 -d -f -k large-payload.json.bz2)",
    "prep-knitr-reports": "mkdir -p tmp/interm tmp/knit resources/reports resources/exp-data",
    "format": "prettier --config .prettierrc '{src,tests,resources}/**/*.{ts,js}' --write",
    "verify": "npm run lint",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "update": "git pull && npm install . && pm2 restart 0",
    "watch": "tsc -w",
    "test": "jest"
  }
}
