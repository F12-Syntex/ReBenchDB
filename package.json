{
  "name": "rebenchdb",
  "version": "0.2.1",
  "description": "A Web-Based Database for ReBench Results",
  "main": "index.js",
  "author": {
    "name": "Stefan Marr",
    "email": "git@stefan-marr.de"
  },
  "license": "MIT",
  "dependencies": {
    "koa": "^2.11.0",
    "koa-body": "4.1.1",
    "koa-router": "^7.4.0",
    "mustache": "3.2.0",
    "pg": "7.14.0"
  },
  "devDependencies": {
    "@types/jest": "24.0.24",
    "@types/mustache": "0.8.32",
    "@types/koa": "2.11.0",
    "@types/koa-router": "7.0.28",
    "@types/pg": "7.4.8",
    "mocha": "6.2.2",
    "source-map-support": "0.5.16",
    "jest": "24.9.0",
    "ts-jest": "24.2.0",
    "tslint": "5.20.1",
    "typescript": "3.7.4",
    "typescript-formatter": "7.2.2",
    "typescript-json-schema": "0.41.0",
    "ajv": "6.10.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  },
  "scripts": {
    "postinstall": "npm run compile",
    "start": "node ./dist/src/index.js",
    "compile": "tsc && npm run prep-resources && npm run prep-knitr-reports",
    "prep-resources": "(cd tests; bzip2 -d -f -k large-payload.json.bz2)",
    "prep-knitr-reports": "mkdir -p tmp/interm tmp/knit resources/reports",
    "format": "tsfmt -r",
    "verifyformat": "tsfmt --verify",
    "verify": "npm run lint && npm run verifyformat",
    "lint": "tslint -c tslint.json --project tsconfig.json",
    "update": "git pull && npm install . && pm2 restart 0",
    "watch": "tsc -w",
    "test": "jest"
  }
}
